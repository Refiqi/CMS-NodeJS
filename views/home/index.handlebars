      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4">Home
            <small>Newest posts</small>
          </h1>
        {{#each posts}}
          <!-- Blog Post -->
          <div class="card mb-4">
            <img class="card-img-top" height="50%" width="448px" src="/uploads/{{file}}" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text">{{body}}</p>
              <a href="/post/{{id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on {{generateTime date 'MMMM Do YYYY'}} by
              <a href="/users/">User</a>
            </div>
          </div>
        {{/each}}

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
              <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#">Newer &rarr;</a>
            </li>
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        {{> home/home-widget}}

      </div>
      <!-- /.row -->