<h1>ALL POSTS</h1>

<table class="table table-bordered table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Image</th>
            <th>Status</th>
            <th>Category</th>
            <th>Pages</th>
            <th>Allow Comments</th>
            <th>Body</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
            
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td><img src="/uploads/{{file}}" alt="Image here" class="img-thumbnail"</td>
                <td>{{status}}</td>
                <td>{{category.name}}</td>
                <td><a href="/post/{{id}}">Views</a></td>
                <td>{{allowComments}}</td>
                <td>{{body}}</td>
                <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            </tr>
            {{/each}}

        </tbody>
</table>