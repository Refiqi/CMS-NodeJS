<div class="row">

    <div class="col-sm-4">
        <h2>Create Category</h2>

        <form action="/admin/categories/create" method="post">

            <div class="form-group">
                <input type="text" name="name" id="name" class="form-control" placeholder="Enter Category">
            </div>

            <button type="submit" class="btn btn-primary">Create Categories</button>

        </form>
    </div>


    <div class="col-sm-8">
        <h2>Category</h2>


        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                
                {{#each categories}}

                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{generateTime date 'MMMM Do YYYY'}}</td>
                    <td><a class="btn btn-primary" href="categories/edit/{{id}}">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>

</div>